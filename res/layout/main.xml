<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4dip">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/word_style"
	        android:id="@+id/word_name"
	        android:text="fantastic" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="8dip"
            android:id="@+id/word_part"        
            android:text="adj."
            android:textColor="@color/word_part"/>
        <LinearLayout 
            android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <CheckBox android:id="@+id/star_check_box"
	            style="?android:attr/starStyle"
	            android:layout_gravity="right"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:paddingTop="5dip"
            android:paddingLeft="8dip"   
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/word_phonetic"
            android:textColor="@color/word_phonetic" 
            android:text="/ fæn'tæstik /"/>
    
    <TextView 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content" 
           style="@style/text_separator_style" />
    
    <ListView
        android:id="@+id/explanation_list"
        android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1" 
	    android:padding="6dip">
    </ListView>
</LinearLayout>